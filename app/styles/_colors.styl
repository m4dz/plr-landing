border-color = #ddd
border-error-color = #DBB1B1
box-shadow-color = #d4d4d5
background-color = #f7f7f7
background-overlay-color = rgba(255, 255, 255, .9)
link-color = rgb(89, 155, 220)
font-color = rgba(0, 0, 0, .8)
font-light-color = rgba(0, 0, 0, .5)
font-error-color = #D95C5C
text-shadow-color = rgba(255, 255, 255, .8)



body
    background-color background-color
    color font-color

a
    color link-color


.container
    background-color #fff
    box-shadow 0 0 2px 0 rgba(0, 0, 0, .05)
    border-color border-color
    border-style solid
    border-width 0 1px 1px
    border-radius 0 0 0.2857rem 0.2857rem

    @media(max-width)
        border-width 0 0 1px

section
    border-top 1px solid border-color


.card
    box-shadow 0 2px 0 0 box-shadow-color, 0 0 0 1px box-shadow-color
    border-radius 0.1875rem

    .description
        border-top 1px solid border-color

    &.extras
        cursor pointer

h2
    .date
        color font-light-color

    .counter
        background link-color
        color      #FFF

.meta
footer
    color font-light-color


.medium
    position relative

    &::after
        content ''
        display block
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAQAAAAECAYAAACp8Z5+AAAAD0lEQVQImWNgQAX/yeAAAIHCA/0RE2WAAAAAAElFTkSuQmCC') repeat


dd[aria-expanded]
    cursor pointer


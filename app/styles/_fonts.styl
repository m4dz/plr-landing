body
    font-family: Lato, sans-serif

    @media(max-width: 29.9999em)
        font-size .9em


h1
    transition font-size 250ms


blockquote
    position relative

    p
        font-style  italic
        font-family serif

    footer
        font-size .8em

    header &
        p
            font-size   1.25em

        &::before
            content     '‟'
            display     block
            position    absolute
            top         -.35em
            left        0
            color       font-light-color
            text-shadow 0 1px 1px text-shadow-color
            font-size   6em


.locales
    font-size .85em


nav a
    text-decoration: none


h2
    font-size 2em

    .date
        font-weight normal
        font-size   .55em

    .counter
        padding       0 .5em
        border-radius 0.2875rem


.icon-feed
    vertical-align baseline
    font-size      0.85485em


.roll
    h3
        font-size 1em


.card
    .meta
    .description
        font-size .85em

    .email
        font-style italic


dt
    font-weight bold

    &::before
        content:       '▸'
        display        inline-block
        margin-right   .35em
        vertical-align top


footer
    font-size .85em


html:not([lang=fr]) .l10n
    // ahemm... so ugly, sorry
    a[href ^= http]:not([href *= blog\.mozilla])::after
        content        ' [fr]'
        font-size      .65em
        vertical-align top

.col
    width      100%
    max-width  60rem
    box-sizing border-box

.col-2-1
    display flex

    @media(max-width: 35em)
        flex-direction column-reverse

    @media(min-width: 35.0625em)
        & > :first-child
            flex 2

        & > :last-child
            flex        1
            margin-left 2em

.col-2-2
    display   flex
    flex-wrap wrap
    width 100%

    article
        box-sizing border-box
        flex       1 1 calc(50% - 1em)

        @media(max-width: 48.6875em)
            flex-basis 100%

    img
        width 100%



#page
    position relative
    margin   0 auto


imageRatio = 350 / 960 * 100%

.overlay
    position       fixed
    top            0
    left           50%
    transform      translateX(-50%)
    padding-bottom imageRatio
    height         0

    @media(max-width: 29.99999em)
        position       initial
        transform      none !important
        padding-bottom 0


.container
    position   relative
    margin-top imageRatio
    padding    1em

    h1
        box-sizing border-box
        margin-top 0


nav
    ul
        padding         0
        list-style-type none

    li
        vertical-align top
        display        inline

    @media(min-width: 30.0625em)
        .socials
        .locales
            float right

        .main
            float left

    .main li
        padding-right 1em

    iframe
        vertical-align bottom

    .main .icon
        margin-top -0.12em

header
    blockquote
        margin       2em 0
        padding-left 3em

    &::after
        content ''
        display block
        clear   both

    img
        display none


section
    margin   1em 0 0
    padding  1em 1em 0
    overflow hidden

    + section
        margin-top  0
        padding-top 0


.roll
    li
        display       block
        margin-bottom 1em

    .icons
    h3
        display     inline
        margin      0
        font-weight normal


.tag
    display       inline-block
    height        1.6em
    padding       0 .5em
    border-radius calc(.8em + 4px)


[href*=feed]
    margin-left 1em


#news
    h3
        margin-top 0

    article
        margin-bottom 2em

    .icons
        margin-bottom 1em

    .icon-pushpin
        margin-top -0.18em
        margin-left .45em


#faq
    box-sizing border-box
    clear      both

    [aria-expanded=false]
        overflow      hidden
        height        1.5em
        white-space   nowrap
        text-overflow ellipsis


#signatories
    margin-top 4em

    ul
        margin          2em 0 0
        padding         0
        list-style-type none

    li
        display        inline-block
        vertical-align top
        box-sizing     border-box
        width          33%
        min-width      15em
        margin         0
        padding        0 .5em 2em

        @media(max-width: 55.12499em)
            width 49%

        @media(max-width: 34.99999em)
            width 100%

    h2
        overflow hidden

    .markers
        float        right
        margin       0
        margin-right -5.5em

        li
            display      inline-block
            margin-right -10%
            padding      0
            width        inherit
            min-width    1px

        img
            width 2.75em



.card
    box-sizing border-box
    overflow   hidden

    .logo
        float    left
        position relative
        width    4em
        height   4em
        margin   .5em 16px

        img
            position   absolute
            top        50%
            left       50%
            transform  translateX(-50%) translateY(-50%)
            width      4em
            max-width  4em
            max-height 4em

    .content
        padding 1em 1em 1em 6em

    h3
        margin 0

    .description
        margin  0
        padding 1em 1em 2em

        display none

    &:hover
        .description
            display block


.medium img
    display block
    width   100%


dl
    dt
        margin-top 1em

    dd
        margin-left   0
        margin-bottom 2em


#page > footer
    padding-top 5em

    img
        display        inline-block
        vertical-align middle

    .license img
        margin-right   .65em

    @media(max-width: 60em)
        padding 3em 1em 0

    @media(min-width: 40em)
        .license
            width      65%
            margin-top 1em

        .author
            width      35%
            float      right
            text-align right
